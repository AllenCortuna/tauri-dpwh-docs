{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "fs:allow-write-file",
    "fs:allow-read-file",
    "dialog:allow-save",
    "dialog:allow-open",
    "core:default",
    "fs:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APPDATA/*"
        }
      ]
    },
    "sql:default",
    "sql:allow-execute",
    "dialog:default",
    "log:default",
    "dialog:default"
  ]
}